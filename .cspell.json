// cSpell Settings doc:
// - https://github.com/streetsidesoftware/cspell/tree/main/packages/cspell#customization

{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  // Version of the setting file. Always 0.2
  "version": "0.2",
  // Active spelling language
  "language": "en",
  // Force enable per file types
  "enableFiletypes": ["json5"],
  // Specify file types to spell check.
  "enabledLanguageIds": [
    "dockercompose",
    "ignore",
    "markdown",
    "pip-requirements",
    "properties",
    "shellscript",
    "yaml"
  ],
  // Ignore file list
  "ignorePaths": [".git", ".vscode", ".cspell.json"],
  // Custom project dictionary
  "words": [
    "cadvisor",
    "dcrun",
    "deviceid",
    "markdownlint",
    "mosquitto",
    "MQTT",
    "nodeexporter",
    "PGID",
    "promtail",
    "PUID",
    "socketproxy",
    "syslogng",
    "Tasmota",
    "tele",
    "Trivy",
    "trivyignore"
  ]
}
